<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="text1"
        android:layout_marginLeft="20dp"
        android:id="@+id/fmd_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="text2"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/fmd_text1"
        android:id="@+id/fmd_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="20dp"
        android:text="text3"
        android:layout_below="@id/fmd_text2"
        android:id="@+id/fmd_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/fmd_text3"
        android:id="@+id/fmd_bt"
        android:textSize="20dp"
        android:textColor="#dbc72f"
        android:text="确定"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
